{
  "manifest_version": 3,
  "name": "SIGAA UFJ - Redesign Moderno",
  "version": "3.0.0",
  "description": "Redesign moderno do portal SIGAA UFJ",
  "author": "Rubens Neto",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://sigaa.sistemas.ufj.edu.br/sigaa/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],
  "permissions": [],
  "host_permissions": [
    "https://sigaa.sistemas.ufj.edu.br/*"
  ]
}
